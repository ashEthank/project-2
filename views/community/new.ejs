<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs'); %>
    <%- include('../partials/headerStyle.ejs'); %>
    <style>
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 80px;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      input {
        margin-bottom: 5px;
      }
      .input {
        text-align: center;
      }
      #textArea {
        resize: none;
        width: 190px;
        height: 300px;
      }
      #submit:hover {
        border: 2px solid red;
        color: red;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/header.ejs'); %>
    <div class="container">
      <h3>New Activity</h3>
      <form action="/activities" method="POST">
        <input class="input" type="text" name="title" placeholder="Title" required>
        <input class="input" type="text" name="location" placeholder="Location" required>
        <input class="input" type="text" name="imageURL" placeholder="Image URL" required>
        <textarea id="textArea" maxlength="500" name="textArea"></textarea>
        <br>
        <input id="submit" type="submit" value="Submit">
      </form>
    </div>
  </body>
</html>
